{
    "name": "youtube-search",
    "version": "0.0.0",
    "type": "module",
    "author": "Nicholas Villarreal",
    "devDependencies": {
        "@tailwindcss/postcss": "^4.1.7",
        "concurrently": "^9.1.2",
        "daisyui": "^5.0.37",
        "postcss": "^8.5.3",
        "tailwindcss": "^4.1.7",
        "twlit": "^1.0.0",
        "vite": "^4.4.11"
    },
    "private": true,
    "scripts": {
        "dev": "concurrently \"bun -b --hot vite\" \"tailwindcss -i ./src/assets/css/app.css -o ./src/assets/css/tailwind-gen.css --watch\" \"twlit --input ./src/assets/css/tailwind-gen.css --output ./src/assets/js/tailwind-gen.js\" ",
        "pre-build": "concurrently --success first -k \"sleep 2\" \"tailwindcss -i ./src/assets/css/app.css -o ./src/assets/css/tailwind-gen.css --watch\" \"twlit --input ./src/assets/css/tailwind-gen.css --output ./src/assets/js/tailwind-gen.js\" ",
        "build": "bun run pre-build && bun -b vite build",
        "preview": "bun -b vite preview"
    },
    "dependencies": {
        "htmx.org": "2.0.4",
        "lit": "^3.3.0"
    }
}
